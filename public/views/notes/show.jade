extends ..\layout

block append head

block content
  if noteToRender
      p Id: #{noteToRender.id}
      p Created on #{noteToRender.createdAt}
      hr
      p #{noteToRender.body}
      hr
      p
        a(href="/notes/edit/#{noteToRender.id}") Edit
      form(action='/notes/delete/#{noteToRender.id}', method='post')
        input(type='submit', value='Delete')